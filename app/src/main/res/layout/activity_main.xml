<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/et_name"
            tools:layout_editor_absoluteX="99dp" app:layout_constraintBottom_toTopOf="@+id/button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_repos"/>
    <Button

            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button" tools:layout_editor_absoluteY="435dp"
            tools:layout_editor_absoluteX="161dp"/>
    <TextView
            android:text="Repos piratas a cora"
            android:layout_width="wrap_content"
            android:layout_height="13dp" android:id="@+id/tv_repos"
            tools:layout_editor_absoluteX="140dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="116dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
</androidx.constraintlayout.widget.ConstraintLayout>